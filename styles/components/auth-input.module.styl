.inputWrapper
  position: relative
  display: flex
  align-items: center

.icon
  position: absolute
  left: 0.75rem
  color: #9ca3af
  z-index: 10
  font-size: 16px

.input
  width: 100%
  padding: 0.625rem 0.75rem 0.625rem 2.5rem
  border-radius: 0.375rem
  font-size: 0.875rem
  transition: all 0.2s
  
  &:focus
    outline: none
    ring: 2px
    ring-color: #3b82f6
    border-color: transparent

.passwordToggle
  position: absolute
  right: 0.75rem
  top: 50%
  transform: translateY(-50%)
  color: #9ca3af
  cursor: pointer
  z-index: 10
