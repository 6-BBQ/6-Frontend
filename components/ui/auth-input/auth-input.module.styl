.container
  margin-bottom: 0.75rem

.label
  display: block
  font-size: 0.875rem
  font-weight: 500
  color: #374151
  margin-bottom: 0.25rem
  
  :global(.dark) &
    color: #9ca3af

.inputWrapper
  position: relative
  display: flex
  align-items: center

.icon
  position: absolute
  left: 0.75rem
  color: #9ca3af
  z-index: 10
  font-size: 16px

.input
  width: 100%
  background-color: #f3f4f6
  border: 1px solid #d1d5db
  border-radius: 0.375rem
  padding-left: 2.5rem
  padding-right: 0.75rem
  padding-top: 0.625rem
  padding-bottom: 0.625rem
  color: #111827
  font-size: 0.875rem
  transition: all 0.2s ease-in-out
  
  &:focus
    outline: none
    box-shadow: 0 0 0 2px #3b82f6
    border-color: transparent
  
  :global(.dark) &
    background-color: #111827
    border-color: #374151
    color: #ffffff
    
    &:focus
      box-shadow: 0 0 0 2px #3b82f6

.passwordToggle
  position: absolute
  right: 0.75rem
  top: 50%
  transform: translateY(-50%)
  color: #9ca3af
  cursor: pointer
  z-index: 10
  background: none
  border: none
  padding: 0.25rem
  border-radius: 0.25rem
  transition: color 0.2s ease-in-out
  
  &:hover
    color: #6b7280
  
  &:focus
    outline: none
    box-shadow: 0 0 0 2px #3b82f6
