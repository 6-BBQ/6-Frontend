.container
  max-width: 28rem
  margin: 0 auto
  width: 100%

.title
  font-size: 1.5rem
  font-weight: bold
  margin-bottom: 0.25rem

.subtitle
  font-size: 0.875rem
  color: #4b5563
  margin-bottom: 1.5rem
  
  :global(.dark) &
    color: #9ca3af

.link
  color: #2563eb
  transition: color 0.2s ease-in-out
  
  &:hover
    color: #1d4ed8
  
  :global(.dark) &
    color: #db2777
    
    &:hover
      color: #be185d

.emailContainer
  margin-bottom: 0.75rem

.emailLabel
  display: block
  font-size: 0.875rem
  font-weight: 500
  color: #374151
  margin-bottom: 0.25rem
  
  :global(.dark) &
    color: #9ca3af

.emailWrapper
  display: flex
  gap: 0.5rem

.emailInputWrapper
  position: relative
  display: flex
  align-items: center
  flex: 1

.emailIcon
  position: absolute
  left: 0.75rem
  color: #9ca3af
  z-index: 10
  font-size: 16px

.emailInput
  width: 100%
  background-color: #f3f4f6
  border: 1px solid #d1d5db
  border-radius: 0.375rem
  padding-left: 2.5rem
  padding-right: 0.75rem
  padding-top: 0.625rem
  padding-bottom: 0.625rem
  color: #111827
  font-size: 0.875rem
  transition: all 0.2s ease-in-out
  
  &:focus
    outline: none
    box-shadow: 0 0 0 2px #3b82f6
    border-color: transparent
  
  :global(.dark) &
    background-color: #111827
    border-color: #374151
    color: #ffffff
    
    &:focus
      box-shadow: 0 0 0 2px #3b82f6

.verificationButton
  background-color: #2563eb
  color: #ffffff
  padding: 0.5rem 0.75rem
  border-radius: 0.375rem
  white-space: nowrap
  font-size: 0.875rem
  border: none
  cursor: pointer
  transition: background-color 0.2s ease-in-out
  
  &:hover
    background-color: #1d4ed8
  
  &:focus
    outline: none
    box-shadow: 0 0 0 2px #3b82f6
  
  :global(.dark) &
    background-color: #db2777
    
    &:hover
      background-color: #be185d
